#ifndef VORTEXCORE_ERRORCODES_H
#define VORTEXCORE_ERRORCODES_H

enum class SYSTEM_CODE {
    CONTROLLER_REBOOT = 1,
    SYSTEM_REBOOT =  2
};

enum class ERROR_CODE {
    START = -1,
    IO_DISCARDED = -32001,
    OVERLAP = -32002,
    INVALID_TIME = -32003,
    INVALID_REQUEST = -32600,
    INVALID_PARAM = -32602
};

#endif /* VORTEXCORE_ERRORCODES_H */
